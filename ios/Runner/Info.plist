<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>
  <key>CFBundleDisplayName</key>
  <string>Custom Camera Component</string>
  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>
  <key>CFBundleName</key>
  <string>Custom Camera Component</string>
  <key>CFBundlePackageType</key>
  <string>APPL</string>
  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>
  <key>CFBundleSignature</key>
  <string>????</string>
  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>

  <!-- URL Schemes (se ti servono deep link) -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleTypeRole</key>
      <string>Editor</string>
      <key>CFBundleURLName</key>
      <string>customcameracomponent.com</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>customcameracomponent</string>
      </array>
    </dict>
  </array>

  <key>FlutterDeepLinkingEnabled</key>
  <true/>

  <key>LSRequiresIPhoneOS</key>
  <true/>

  <!-- 📸 Permessi iOS -->
  <key>NSCameraUsageDescription</key>
  <string>Questa app utilizza la fotocamera per scattare foto.</string>

  <!-- 🎤 Solo se registri video; altrimenti puoi rimuoverlo -->
  <key>NSMicrophoneUsageDescription</key>
  <string>Il microfono è usato solo per registrare video.</string>

  <!-- 🖼️ Lettura/scrittura libreria foto -->
  <key>NSPhotoLibraryUsageDescription</key>
  <string>Questa app accede alla libreria foto per selezionare immagini.</string>
  <key>NSPhotoLibraryAddUsageDescription</key>
  <string>Questa app salva le foto scattate nella libreria.</string>

  <!-- 📱 Splash -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>

  <!-- ❌ Rimosso: Flutter non usa un Main storyboard -->
  <!-- <key>UIMainStoryboardFile</key><string>Main</string> -->

  <!-- 🔒 Orientamenti: iPhone solo Portrait per allineamento viso;
       iPad mantiene tutti gli orientamenti -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
  </array>
  <key>UISupportedInterfaceOrientations~ipad</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Status bar gestita da sistema -->
  <key>UIViewControllerBasedStatusBarAppearance</key>
  <false/>

  <!-- 🏎️ Anteprima più fluida (consente >30 fps su device compatibili) -->
  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>
</dict>
</plist>